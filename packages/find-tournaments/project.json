{
  "name": "find-tournaments",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/find-tournaments/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/find-tournaments",
        "main": "packages/find-tournaments/src/index.ts",
        "tsConfig": "packages/find-tournaments/tsconfig.lib.json",
        "assets": ["packages/find-tournaments/*.md"]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs find-tournaments {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/find-tournaments/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/packages/find-tournaments"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/find-tournaments"
      }
    }
  },
  "tags": []
}
